+/* WXR_FORMAT_B8G8R8X8 */    { 32,     0,      0,      8,      0xff,   16,     0xff,   24,     0xff    },
+/* WXR_FORMAT_X2R10G10B10 */ { 30,     0,      0,      20,     0x3ff,  10,     0x3ff,  0,     0x3ff    },
 };
 
 static enum wxr_format default_format = WXR_INVALID_FORMAT;

