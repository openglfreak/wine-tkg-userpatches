@@ -4457,6 +4457,9 @@ static BOOL show_window( HWND hwnd, INT cmd )
 
     if (!(win = get_win_ptr( hwnd )) || win == WND_OTHER_PROCESS) goto done;
 
+    if (show_flag && !was_visible && ((style & (WS_CAPTION | WS_MAXIMIZE | WS_MAXIMIZE)) == WS_CAPTION))
