     status->nLanguageID = 0;
@@ -8331,6 +8359,7 @@ BOOL WINAPI GetFontFileData( DWORD instance_id, DWORD unknown, UINT64 offset, vo
     DWORD tag = 0, size;
     BOOL ret = FALSE;
 
+    pthread_once( &font_list_init_once, font_list_init );
     if (!font_funcs) return FALSE;
