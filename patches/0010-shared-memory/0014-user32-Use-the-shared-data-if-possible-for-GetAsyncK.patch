+++ b/dlls/win32u/hook.c
@@ -256,8 +256,6 @@ static LRESULT call_hook( struct win_hook_params *info )
         thread_info->hook_call_depth--;
     }
 
-    if (info->id == WH_KEYBOARD_LL || info->id == WH_MOUSE_LL)
